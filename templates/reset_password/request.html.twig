{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
{% for flash_error in app.flashes('reset_password_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Reset Your Password</h1>

                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger text-center mb-4" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        <form action="{{ path('app_forgot_password_request') }}" method="POST">
                            {{ form_widget(requestForm._token) }} 
                            {{ form_widget(requestForm.email, {
                                'attr': {
                                    'class': 'form-control mb-3',
                                    'placeholder': 'Enter your email address',
                                    'autofocus': 'autofocus'
                                }
                            }) }}

                            <small class="d-block text-center mb-3">
                                We will send you a link to reset your password.
                            </small>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Send Password Reset Email</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
