{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Reset Your Password</h1>

                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger text-center mb-4" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        <form action="{{ path('app_reset_password') }}" method="POST">
                            {{ form_widget(resetForm.password, {
                                'attr': {
                                    'class': 'form-control mb-3',
                                    'placeholder': 'Enter your new password',
                                    'autofocus': 'autofocus'
                                }
                            }) }}

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Reset Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
